\begin{vocab}
\vocabitem{charge}{a numerical rating of how strongly an object
participates in electrical forces}

\vocabitem{coulomb (C)}{the unit of electrical charge}

\vocabitem{current}{the rate at which charge crosses a certain boundary}

\vocabitem{ampere}{the metric unit of current, one coulomb pe second; also ``amp''}

\vocabitem{ammeter}{a device for measuring electrical current}

\vocabitem{circuit}{an electrical device in which charge can come back
to its starting point and be recycled rather than getting stuck in a dead end}

\vocabitem{open circuit}{a circuit that does not function because it has a gap in it}

\vocabitem{short circuit}{a circuit that does not function because
charge is given a low-resistance ``shortcut'' path that it
can follow, instead of the path that makes it do something useful}

\vocabitem{voltage}{electrical potential energy per unit charge that
will be possessed by a charged particle at a certain point in space}

\vocabitem{volt}{the metric unit of voltage, one joule per coulomb}

\vocabitem{voltmeter}{a device for measuring voltage differences}

\vocabitem{ohmic}{describes a substance in which the flow of current
between two points is proportional to the voltage difference between them}

\vocabitem{resistance}{the ratio of the voltage difference to the
current in an object made of an ohmic substance}

\vocabitem{ohm}{the metric unit of electrical resistance, one volt per ampere}

\end{vocab}
\begin{notation}

\notationitem{$q$}{charge}

\notationitem{$I$}{current}

\notationitem{$A$}{units of amperes}

\notationitem{$V$}{voltage}

\notationitem{V}{units of volts}

\notationitem{$R$}{resistance}

\notationitem{$\Omega$}{units of ohms}
\end{notation}
\begin{othernotation}

\notationitem{electric potential}{rather than the more informal ``voltage''
used here; despite the misleading name, it is not the same
